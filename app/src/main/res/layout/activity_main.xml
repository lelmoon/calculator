<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_gravity="center">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/name_edit"
                android:id="@+id/double_edit" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/name2_edit"
                android:id="@+id/double2_edit" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="16dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/btn_plus"
            android:textColorHint="@color/white"
            android:layout_weight="1"
            android:id="@+id/plus"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/btn_minus"
            android:textColorHint="@color/white"
            android:layout_weight="1"
            android:id="@+id/minus"
            android:textSize="30sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/bnt_multiply"
            android:textColorHint="@color/white"
            android:layout_weight="1"
            android:id="@+id/multiply"
            android:textSize="30sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/btn_split"
            android:textColorHint="@color/white"
            android:layout_weight="1"
            android:id="@+id/split"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="@string/result"
            android:textSize="32sp"
            android:id="@+id/textView"
            android:gravity="center"
            android:background="#e6e6e3"/>

    </LinearLayout>

</LinearLayout>